{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "XrmEmulator.DataverseFakeApi": "Debug"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Warning",
        "Microsoft.AspNetCore.Mvc": "Warning",
        "Microsoft.AspNetCore.Routing": "Warning",
        "XrmEmulator.DataverseFakeApi": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithEnvironmentName", "WithMachineName", "WithProcessId", "WithThreadId"]
  },
  "DataverseFakeApi": {
    "BaseUrl": "https://localhost:443",
    "DataverseUrl": "https://contoso.crm.dynamics.com",
    "TenantId": "fake-tenant-id",
    "UseXrmMockup": true,
    "OAuth": {
      "TokenEndpoint": "/oauth2/token",
      "DefaultTokenLifetimeHours": 1,
      "AcceptedClientIds": [
        "fake-client-id-1",
        "fake-client-id-2"
      ]
    },
    "XrmMockup": {
      "InitializeWithMetadata": true,
      "SeedTestData": true,
      "EnablePlugins": false,
      "EnableWorkflows": false
    }
  },
  "AllowedHosts": "*"
}